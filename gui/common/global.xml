<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<!DOCTYPE objects SYSTEM "../gui.dtd">

<objects>

	<!-- ==========================================
	 - GLOBAL OBJECTS - ==========================================
	-->

	<object>

		<!-- ==========================================
		- GAMESTATE NOTIFICATIONS ==========================================
		-->
		<object name="gameStateNotifications"
			type="text"
			ghost="true"
			z="199"
			size="100%-110 40 100%-110 40"
			font="mono-stroke-10"
			textcolor="255 219 77"
			text_align="center"
			text_valign="top"
			sprite="color: 0 0 0 100">
		</object>

		<!-- ==========================================
		- FPS & REAL TIME & GAME TIME COUNTER ==========================================
		-->
		<object name="dataCounter"
			type="text"
			ghost="true"
			hidden="false"
			z="199"
			size="100%-90 40 100%-5 40"
			font="mono-10"
			textcolor="white"
			text_align="right"
			text_valign="top"
			sprite="color: 0 0 0 100">
			<action on="Tick">
				if (!g_autociv_is24)
					updateCounters();
			</action>
			<action on="Load">
				// autociv: Should work but doesn't ??????????
				if (g_autociv_is24)
					g_OverlayCounterManager = new OverlayCounterManager(this);
			</action>
		</object>

		<object name="fpsCounter"
			type="text"
			ghost="true"
			hidden="true"
			hotkey="fps.toggle">
			<action on="Press">
				Engine.ConfigDB_CreateValue("user", "overlay.fps", ""+(Engine.ConfigDB_GetValue("user", "overlay.fps")!== "true"));
			</action>
		</object>

		<!-- ==========================================
		- TIME COUNTER ==========================================
		-->

		<object name="timeCounter"
			type="text"
			ghost="true"
			hidden="true"
			hotkey="realtime.toggle">
			<action on="Press">
				Engine.ConfigDB_CreateValue("user", "overlay.realtime", ""+(Engine.ConfigDB_GetValue("user", "overlay.realtime") !== "true"));
			</action>
		</object>

		<!-- ==========================================
		- WATERMARK - USED WHEN TAKING OFFICIAL SCREENSHOTS ==========================================
		-->

		<object name="glbWaterMark"
			hidden="true"
			hotkey="screenshot.watermark"
			z="200">
			<action on="Press">
				this.hidden = !this.hidden;
			</action>

			<object name="glbWaterMarkProductLogo"
				type="image"
				size="0 100%-88 190 100%"
				sprite="watermarkProduct" />

			<object name="glbWaterMarkCompanyLogo"
				type="image"
				size="100%-207 100%-28 100% 100%"
				sprite="watermarkCompany" />
		</object>

		<!-- ==========================================
		- TICK ANIMATION ROUTINES - IF NOT USED, THEY DO NOTHING ==========================================
		-->

		<action on="Tick">
			resizeBarManager.onTick();
			animate.onTick();
		</action>

		<!-- ==========================================
		- RESIZE BAR - USED FOR VISUALIZING OBJECT RESIZE BAR ==========================================
		-->

		<object name="glResizeBar"
			type="image"
			sprite="color: 160 160 160 255"
			hidden="true"
			size="0 0 0 0"
			z="800" />

		<!-- ==========================================
		- MAP BROWSER BUTTON - USED IN GAMESETUP TO OPEN THE MAP BROWSER PAGE ==========================================
		-->

		<object name="glMapBrowser"
			type="button"
			sprite="stretched:autociv_mapbrowser/map_button.png"
			sprite_over="stretched:color:255 255 255 50:textureAsMask:autociv_mapbrowser/map_button.png"
			sprite_pressed="stretched:color:255 255 255 100:textureAsMask:autociv_mapbrowser/map_button.png"
			sprite_disabled="stretched:grayscale:autociv_mapbrowser/map_button.png"
			hidden="true"
			font="sans-bold-stroke-13"
			size="100%-45-64 0%+320-64 100%-45-0 0%+320+0"
			z="799"
			textcolor="200 200 200"
			text_align="center"
			text_valign="center">
			<translatableAttribute id="caption">Map Browser</translatableAttribute>
		</object>

		<!-- ==========================================
		- APM STATS AREA - USED IN SESSION TO SHOW APM STATS ==========================================
		-->

		<object name="gl_autocivSessionAPM"
			size="100%-100 0 100%-5 0"
			hidden="true"
			z="799">

			<object name="gl_autocivSessionAPMOverlay"
				type="button"
				size="0 0 100% 0%+14"
				textcolor="white"
				sprite="color: 0 0 0 100"
				sprite_over="color: 0 0 0 150"
				sprite_pressed="color: 0 0 0 220"
				font="mono-10"
				text_align="right"
				text_valign="center"
				buffer_zone="0">
			</object>

			<object name="gl_autocivSessionAPMChartBackground"
				type="image"
				sprite="color: 0 0 0 150"
				ghost="true"
				hidden="true"
				size="-100 14 100% 0%+14+100">
				<object name="gl_autocivSessionAPMChart"
					type="chart"
					style="ModernChart"
					text_align="left"
					format_x="DURATION_SHORT"
					format_y="INTEGER">
				</object>
				<object name="gl_autocivSessionAPMTotalGameAverage"
					type="text"
					size="0% 40 100% 0%+40+30"
					text_align="center"
					font="mono-10"
					textcolor="250 250 250 220" />
			</object>

		</object>

		<!-- ==========================================
		- CLI DATA INFO ==========================================
		-->

		<object name="gl_autocivCLI"
			size="50%-400 28% 50%+400 28%"
			hidden="true"
			z="799"
			hotkey="autociv.CLI.toggle">
			<action on="Load">
				global["g_autociv_CLI"] = new Autociv_CLI(this);
			</action>

			<object size="0% 0% 100% 100%+20"
				type="input"
				multiline="false">
				<object size="0% 100% 100% 100%+20"
					type="list"
					sprite_selectarea="ModernDarkBoxWhite"
					scrollbar="true"
					scrollbar_style="ModernScrollBar">
					<object size="0% 100% 100% 100%+20"
						type="text"
						scrollbar ="true"
						scrollbar_style="ModernScrollBar">
					</object>
				</object>
				<object type="text" size="0% 0%+2 0% 100%-2"/>
			</object>
			<object size="0% 0%-70 100% 0%"
				hotkey="autociv.CLI.stdout.toggle"
				hidden="true"
				type="input"
				multiline="true"
				scrollbar ="true"
				style="ModernInput"
				scrollbar_style="ModernScrollBar">
			</object>
			<object hotkey="autociv.CLI.stdout.eval"/>
		</object>

	</object>
</objects>
