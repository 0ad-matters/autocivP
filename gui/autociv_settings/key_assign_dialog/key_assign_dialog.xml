<?xml version="1.0" encoding="utf-8" ?>

<objects>

	<script directory="gui/common/" />
	<script directory="gui/autociv_settings/key_assign_dialog/" />

	<!-- Add a translucent black background -->
	<object
			name="dialogBackground"
			type="button"
			sprite="color: 0 0 0 0">
		<action on="Tick"> onTick() </action>
	</object>

	<object
			name="dialog"
			type="image"
			sprite="color: 20 20 20 0"
			size="50% 0% 50% 0%">
		<object
				name="setting_value_border"
				size="0%-2 0%-2 100%+2 100%"
				type="image"
				sprite="color: 40 40 40 0">
			<object
					name="setting_value_text"
					size="0%+2 0%+2 100%-2 100%"
					type="button"
					sprite="color: 0 0 0 255">
				<repeat count="4">
					<object
							size="0% 0%+4 0% 100%-4"
							type="text"
							textcolor="40 40 40 0"
							sprite="color: 40 40 40 0"
							buffer_zone="0"
							font="sans-bold-14"
							text_align="center"
							text_valign="center"
							ghost="true" />
				</repeat>
			</object>
		</object>
		<object
				name="options"
				size="0%-2 100% 100%+2 100%+20"
				type="button"
				sprite="color: 40 40 40 0">
			<object
					name="options_save"
					size="0%+2 0%+2 33%-1 100%-2"
					type="button"
					textcolor="200 200 200"
					text_align="center"
					text_valign="center"
					sprite="color: 40 40 40 255">Save</object>
			<object
					name="options_clear"
					size="33%+1 0%+2 66%-1 100%-2"
					type="button"
					textcolor="200 200 200"
					text_align="center"
					text_valign="center"
					sprite="color: 40 40 40 255">Clear</object>
			<object
					name="options_cancel"
					size="66%+1 0%+2 100%-2 100%-2"
					type="button"
					textcolor="200 200 200"
					text_align="center"
					text_valign="center"
					sprite="color: 40 40 40 255">Cancel</object>
		</object>
	</object>

</objects>
