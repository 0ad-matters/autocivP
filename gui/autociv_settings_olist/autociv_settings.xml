<?xml version="1.0" encoding="utf-8" ?>

<objects>

	<script directory="gui/common/" />
	<script directory="gui/autociv_settings_olist/" />

	<object hotkey="cancel">
		<action on="Press">	close() </action>
	</object>

	<!-- Add a translucent black background -->
	<object
			name="dialogBackground"
			type="button"
			sprite="color: 0 0 0 0">
		<action on="MouseLeftPress"> close() </action>
	</object>

	<object
			name="dialog"
			type="image"
			sprite="color: 40 40 40 255"
			size="50%-420 0%+20 50%+420 100%-20">

		<action on="Tick"> onTick() </action>
		<object
				name="panel"
				style="ModernSortedList"
				selected_column="hotkey"
				selected_column_order="2"
				type="olist"
				size="50%-400 0%+20 50%+400 100%-20"
				sortable="false"
				font="sans-bold-stroke-13">
			<column
					color="220 220 220"
					id="hotkey"
					width="50%">
				<translatableAttribute id="heading"> Hotkey</translatableAttribute>
			</column>
			<column
					color="180 180 180"
					id="key"
					width="50%">
				<translatableAttribute id="heading">Key</translatableAttribute>
			</column>
		</object>

		<object
				name="restartMessage"
				type="button"
				size="0%+40 100%-100 0%+250 100%-30"
				hidden="true"
				text_align="left"
				text_valign="center"
				sprite="color: 0 0 0 0"
				textcolor="255 0 0 0"
				z="100"
				buffer_zone="20"
				font="sans-bold-16">
			You need to restart the game for these changes to take effect.
		</object>

	</object>

</objects>
